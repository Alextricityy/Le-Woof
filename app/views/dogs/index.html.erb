<div class="container-index">
  <div class="row">
    <div class="col-xs-12 col-sm-8">
      <% @dogs.each do |dog| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card">
            <%= link_to dog, class: "card-link" do%>
            <% if dog.photo %>
              <% photo_url = cl_image_path dog.photo %>
            <% else %>
              <% photo_url = "url('https://goo.gl/images/GPguPA')" %>
            <% end %>
            <div class="card-photo" style="background-image: url('<%= photo_url %>');">

            </div>
            <div class="card-name">
              <h3><%= dog.name.capitalize %></h3>
              <p> Price p/h: $<%= dog.price %></p>
            </div>
            <div class="card-info">
              <p><%=h truncate(dog.description, length: 200) %></p>
            </div>
            <div class="card-date">
              <p>Added on: <%= Date.today %></p>
            </div>
            <%end%>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-xs-12 col-sm-3">
      <div class="map-woof">
        <div
          id="map"
          style="width:95%;
          height: 700px;"
          data-markers="<%= @markers.to_json %>"
        ></div>
      </div>
    </div>
  </div>
</div>

<div class= "how_it_works">
  <h2>How it Works</h2>

</div>
