<!-- Below is the home banner -->
<div class="home-banner" style="background-image: url(<%= image_path "banner.jpg" %>);">
  <div>
    <h1 class="banner-text">
      Connecting dog owners with local dog lovers
    </h1>
    <a href="#dogs" class="button">
      Hello
    </a>
  </div>
</div>
<!-- Above is the home banner -->

<!-- Below is the dogs cards container -->
<div class="container">
  <div class="row">
    <% @dogs.each do |dog| %>
      <div class="col-xs-12 col-md-4 col-sm-8">
        <div class="card">
          <%= link_to dog, class: "card-link" do%>
          <% if dog.photo %>
            <% photo_url = cl_image_path dog.photo %>
          <% else %>
            <% photo_url = "url('https://goo.gl/images/GPguPA')" %>
          <% end %>
          <div class="card-photo" style="background-image: url('<%= photo_url %>');">
            <div >
              <p class="card-icon">icons</p>
            </div>
          </div>
          <div class="card-name">
            <h3><%= dog.name.capitalize %></h3>
            <p> Price p/h: $<%= dog.price %></p>
          </div>
          <div class="card-info">
            <p><%=h truncate(dog.description, length: 80) %></p>
          </div>
          <div class="card-date">
            <p>Added on: <%= Date.today %></p>
          </div>
          <%end%>
        </div>
      </div>
    <% end %>
  </div>
</div>
<!-- Above is the dogs cards container -->




